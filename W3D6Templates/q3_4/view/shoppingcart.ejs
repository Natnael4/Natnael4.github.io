        <% for (const item of cartProducts) { %>
            <div class="item">
                <h3> <%= item.name %></h3>
                <p>Price: US$ <%= item.price %></p>
                <p>Description: <%= item.description %></p>
            </div>
        <% } %>
    </div>
</section>
